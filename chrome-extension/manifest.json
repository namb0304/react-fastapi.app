{
  "manifest_version": 3,
  "name": "タブ管理ダッシュボード クイック追加",
  "version": "1.0",
  "description": "現在開いているタブをダッシュボードに素早く追加します。",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "host_permissions": [
    "http://127.0.0.1:8000/"
  ]
}